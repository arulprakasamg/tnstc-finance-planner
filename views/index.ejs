<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TNSTC Finance Planner</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>TNSTC Finance Planner</h1>
        <div class="date-controls">
            <form action="/" method="GET" id="dateForm">
                <div class="input-group">
                    <label for="fromDate">From:</label>
                    <input type="date" id="fromDate" name="fromDate" value="<%= data.fromDate %>">
                </div>
                <div class="input-group">
                    <label for="toDate">To:</label>
                    <input type="date" id="toDate" name="toDate" value="<%= data.toDate %>">
                </div>
                <button type="submit">Update</button>
            </form>
        </div>
        <% 
            const formatDate = (dateStr) => {
                const date = new Date(dateStr);
                return date.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
            };
            const fromStr = formatDate(data.fromDate);
            const toStr = formatDate(data.toDate);
            const displayDate = fromStr === toStr ? `Collection Date: ${fromStr}` : `Collection Date: ${fromStr} – ${toStr}`;
        %>
        <p class="date-range"><%= displayDate %></p>
    </header>
    
    <main class="container">
        <section class="summary-cards">
            <div class="card">
                <h3>Bank Balance</h3>
                <p class="amount">₹<%= data.bankBalance.toLocaleString('en-IN', { minimumFractionDigits: 2 }) %></p>
            </div>
            <div class="card">
                <h3>Collection</h3>
                <p class="amount income">₹<%= data.collection.toLocaleString('en-IN', { minimumFractionDigits: 2 }) %></p>
            </div>
            <div class="card">
                <h3>HSD Outstanding</h3>
                <p class="amount expense">₹<%= data.hsdOutstanding.toLocaleString('en-IN', { minimumFractionDigits: 2 }) %></p>
            </div>
        </section>
    </main>

    <script src="/js/main.js"></script>
</body>
</html>
