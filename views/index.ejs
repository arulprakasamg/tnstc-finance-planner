<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TNSTC Finance Planner</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>TNSTC Finance Planner</h1>
    </header>
    
    <main class="container">
        <section class="summary-cards">
            <div class="card">
                <h3>Total Balance</h3>
                <p class="amount">$<%= data.summary.totalBalance.toFixed(2) %></p>
            </div>
            <div class="card">
                <h3>Monthly Income</h3>
                <p class="amount income">$<%= data.summary.monthlyIncome.toFixed(2) %></p>
            </div>
            <div class="card">
                <h3>Monthly Expenses</h3>
                <p class="amount expense">$<%= data.summary.monthlyExpenses.toFixed(2) %></p>
            </div>
        </section>

        <section class="transactions">
            <h2>Recent Transactions</h2>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.recentTransactions.forEach(tx => { %>
                        <tr>
                            <td><%= tx.date %></td>
                            <td><%= tx.description %></td>
                            <td><%= tx.category %></td>
                            <td class="<%= tx.amount > 0 ? 'income' : 'expense' %>">
                                <%= tx.amount > 0 ? '+' : '' %><%= tx.amount.toFixed(2) %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </main>

    <script src="/js/main.js"></script>
</body>
</html>
