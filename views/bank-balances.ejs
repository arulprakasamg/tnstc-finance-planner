<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank Balances - TNSTC Finance Planner</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="sidebar">
        <div class="sidebar-header">
            <h2>TNSTC Finance</h2>
        </div>
        <ul class="sidebar-menu">
            <li><a href="/">Dashboard</a></li>
            <li><a href="/bank-balances" class="active">Bank Balances</a></li>
            <li><a href="#">Daily Collections</a></li>
            <li><a href="#">Payment Planning</a></li>
            <li><a href="#">HSD</a></li>
            <li><a href="#">Financial Reports</a></li>
        </ul>
    </nav>
    <div class="main-content">
        <header>
            <h1>Bank Balances</h1>
        <p class="date-range">Manage Bank Master Details</p>
    </header>
    
    <main class="container">
        <!-- Bank Master Management -->
        <section class="master-section">
            <div class="section-header">
                <h2>Bank Master Details</h2>
                <button onclick="showAddModal()" class="btn-primary">Add New Bank</button>
            </div>

            <div class="master-table-container">
                <table class="master-table">
                    <thead>
                        <tr>
                            <th>Account Name</th>
                            <th>Account Number</th>
                            <th>Bank Name</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% banks.forEach(bank => { %>
                            <tr>
                                <td><%= bank.accountName %></td>
                                <td><%= bank.accountNumber %></td>
                                <td><%= bank.bankName %></td>
                                <td><span class="badge"><%= bank.accountType %></span></td>
                                <td>
                                    <button onclick='showEditModal(<%- JSON.stringify(bank) %>)' class="btn-edit">Edit</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Bank Balance Entry Section -->
        <section class="balance-entry-section" style="margin-top: 3rem;">
            <div class="section-header">
                <h2>Bank Balance Entry</h2>
                <div class="position-date-control">
                    <label for="entryPositionDate">Position Date:</label>
                    <input type="date" id="entryPositionDate" value="<%= positionDate %>" onchange="changePositionDate(this.value)">
                </div>
            </div>

            <form id="allBalancesForm" onsubmit="saveAllBalances(event)">
                <input type="hidden" name="positionDate" value="<%= positionDate %>">
                <div class="master-table-container">
                    <table class="master-table">
                        <thead>
                            <tr>
                                <th>Account Name</th>
                                <th>Account Number</th>
                                <th style="width: 200px;">Balance (₹)</th>
                                <th style="width: 150px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% banks.forEach(bank => { %>
                                <tr class="<%= bank.isCarriedForward ? 'carried-forward-row' : '' %>">
                                    <td><%= bank.accountName %></td>
                                    <td><%= bank.accountNumber %></td>
                                    <td>
                                        <div class="input-wrapper">
                                            <input type="number" 
                                                   name="balances[<%= bank.id %>]" 
                                                   value="<%= bank.balance %>" 
                                                   step="0.01" 
                                                   min="0" 
                                                   class="balance-input"
                                                   required>
                                            <% if (bank.isCarriedForward) { %>
                                                <span class="carried-forward-indicator" title="Carried forward from <%= bank.lastUpdated %>">→</span>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <button type="button" 
                                                onclick="saveSingleBalance('<%= bank.id %>', this)" 
                                                class="btn-save-row">Save Row</button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="section-footer" style="margin-top: 2rem; display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn-primary">Save All Balances</button>
                </div>
            </form>
        </section>
    </main>

    <!-- Modals -->
    <div id="bankModal" class="modal">
        <div class="modal-content">
            <h3 id="modalTitle">Add Bank Master</h3>
            <form id="bankForm" method="POST">
                <div class="form-group">
                    <label>Account Name *</label>
                    <input type="text" name="accountName" required>
                </div>
                <div class="form-group">
                    <label>Account Number *</label>
                    <input type="text" name="accountNumber" required>
                </div>
                <div class="form-group">
                    <label>Bank Name *</label>
                    <input type="text" name="bankName" required>
                </div>
                <div class="form-group">
                    <label>Account Type</label>
                    <select name="accountType">
                        <option value="Operational">Operational</option>
                        <option value="Savings">Savings</option>
                        <option value="Special">Special</option>
                    </select>
                </div>
                <div class="modal-actions">
                    <button type="button" onclick="closeModal()" class="btn-secondary">Cancel</button>
                    <button type="submit" class="btn-primary">Save Details</button>
                </div>
            </form>
        </div>
    </div>

    <form id="singleBalanceForm" action="/bank-balances/save-balance" method="POST" style="display:none;">
        <input type="hidden" name="bankId" id="singleBankId">
        <input type="hidden" name="balance" id="singleBalance">
        <input type="hidden" name="positionDate" value="<%= positionDate %>">
    </form>

    <style>
        .master-section, .balance-entry-section { background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); }
        .section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; }
        .master-table { width: 100%; border-collapse: collapse; }
        .master-table th, .master-table td { text-align: left; padding: 1rem; border-bottom: 1px solid #f0f0f0; }
        .master-table th { color: #7f8c8d; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; }
        .badge { background: #e8f4fd; color: #3498db; padding: 0.3rem 0.8rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600; }
        .btn-primary { background: #1a3c5e; color: white; border: none; padding: 0.6rem 1.5rem; border-radius: 6px; cursor: pointer; font-weight: 600; }
        .btn-secondary { background: #f0f2f5; color: #1a3c5e; border: none; padding: 0.6rem 1.5rem; border-radius: 6px; cursor: pointer; }
        .btn-edit { background: none; border: 1px solid #3498db; color: #3498db; padding: 0.3rem 1rem; border-radius: 4px; cursor: pointer; }
        .btn-save-row { background: #27ae60; color: white; border: none; padding: 0.4rem 1rem; border-radius: 4px; cursor: pointer; font-size: 0.85rem; }
        
        .balance-input {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-family: inherit;
        }

        .position-date-control {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .position-date-control label {
            font-weight: 600;
            font-size: 0.9rem;
        }

        .position-date-control input {
            padding: 0.4rem;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .carried-forward-indicator {
            position: absolute;
            right: 10px;
            color: #f39c12;
            font-weight: bold;
            font-size: 1.2rem;
            cursor: help;
        }

        .carried-forward-row td {
            background-color: #fff9f0;
        }

        /* Modal Styles */
        .modal { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; }
        .modal-content { background: white; width: 400px; margin: 10% auto; padding: 2rem; border-radius: 12px; }
        .form-group { margin-bottom: 1.2rem; }
        .form-group label { display: block; margin-bottom: 0.5rem; font-size: 0.85rem; font-weight: 600; }
        .form-group input, .form-group select { width: 100%; padding: 0.6rem; border: 1px solid #ddd; border-radius: 4px; }
        .modal-actions { display: flex; justify-content: flex-end; gap: 1rem; margin-top: 2rem; }
    </style>

    </div>
    <script>
        function changePositionDate(date) {
            window.location.href = `/bank-balances?positionDate=${date}`;
        }

        async function saveSingleBalance(bankId, btn) {
            const row = btn.closest('tr');
            const input = row.querySelector('.balance-input');
            const balance = input.value;
            const positionDate = "<%= positionDate %>";

            try {
                const response = await fetch('/bank-balances/save-balance', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ bankId, balance, positionDate })
                });

                if (response.redirected) {
                    window.location.href = response.url;
                } else if (response.ok) {
                    window.location.reload();
                } else {
                    const error = await response.text();
                    alert('Error saving balance: ' + error);
                }
            } catch (err) {
                console.error('Save failed:', err);
                alert('Network error while saving balance');
            }
        }

        async function saveAllBalances(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            const positionDate = formData.get('positionDate');
            const balances = {};

            // Extract balances[id] from FormData
            for (let [key, value] of formData.entries()) {
                if (key.startsWith('balances[')) {
                    const bankId = key.match(/\[(.*?)\]/)[1];
                    balances[bankId] = value;
                }
            }

            try {
                const response = await fetch('/bank-balances/save-all-balances', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ balances, positionDate })
                });

                if (response.redirected) {
                    window.location.href = response.url;
                } else if (response.ok) {
                    window.location.reload();
                } else {
                    const error = await response.text();
                    alert('Error saving all balances: ' + error);
                }
            } catch (err) {
                console.error('Save all failed:', err);
                alert('Network error while saving all balances');
            }
        }

        const modal = document.getElementById('bankModal');
        const form = document.getElementById('bankForm');

        function showAddModal() {
            document.getElementById('modalTitle').innerText = 'Add Bank Master';
            form.action = '/bank-balances/add';
            form.reset();
            modal.style.display = 'block';
        }

        function showEditModal(bank) {
            document.getElementById('modalTitle').innerText = 'Edit Bank Master';
            form.action = `/bank-balances/edit/${bank.id}`;
            form.elements['accountName'].value = bank.accountName;
            form.elements['accountNumber'].value = bank.accountNumber;
            form.elements['bankName'].value = bank.bankName;
            form.elements['accountType'].value = bank.accountType;
            modal.style.display = 'block';
        }

        function closeModal() {
            modal.style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == modal) closeModal();
        }
    </script>
</body>
</html>
