<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank Balances - TNSTC Finance Planner</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <h1>Bank Balances</h1>
        <p class="date-range">Manage Bank Master Details</p>
    </header>
    
    <main class="container">
        <!-- Bank Master Management -->
        <section class="master-section">
            <div class="section-header">
                <h2>Bank Master Details</h2>
                <button onclick="showAddModal()" class="btn-primary">Add New Bank</button>
            </div>

            <div class="master-table-container">
                <table class="master-table">
                    <thead>
                        <tr>
                            <th>Account Name</th>
                            <th>Account Number</th>
                            <th>Bank Name</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% banks.forEach(bank => { %>
                            <tr>
                                <td><%= bank.accountName %></td>
                                <td><%= bank.accountNumber %></td>
                                <td><%= bank.bankName %></td>
                                <td><span class="badge"><%= bank.accountType %></span></td>
                                <td>
                                    <button onclick='showEditModal(<%- JSON.stringify(bank) %>)' class="btn-edit">Edit</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <!-- Modals -->
    <div id="bankModal" class="modal">
        <div class="modal-content">
            <h3 id="modalTitle">Add Bank Master</h3>
            <form id="bankForm" method="POST">
                <div class="form-group">
                    <label>Account Name *</label>
                    <input type="text" name="accountName" required>
                </div>
                <div class="form-group">
                    <label>Account Number *</label>
                    <input type="text" name="accountNumber" required>
                </div>
                <div class="form-group">
                    <label>Bank Name *</label>
                    <input type="text" name="bankName" required>
                </div>
                <div class="form-group">
                    <label>Account Type</label>
                    <select name="accountType">
                        <option value="Operational">Operational</option>
                        <option value="Savings">Savings</option>
                        <option value="Special">Special</option>
                    </select>
                </div>
                <div class="modal-actions">
                    <button type="button" onclick="closeModal()" class="btn-secondary">Cancel</button>
                    <button type="submit" class="btn-primary">Save Details</button>
                </div>
            </form>
        </div>
    </div>

    <style>
        .master-section { background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); }
        .section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; }
        .master-table { width: 100%; border-collapse: collapse; }
        .master-table th, .master-table td { text-align: left; padding: 1rem; border-bottom: 1px solid #f0f0f0; }
        .master-table th { color: #7f8c8d; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; }
        .badge { background: #e8f4fd; color: #3498db; padding: 0.3rem 0.8rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600; }
        .btn-primary { background: #1a3c5e; color: white; border: none; padding: 0.6rem 1.5rem; border-radius: 6px; cursor: pointer; font-weight: 600; }
        .btn-secondary { background: #f0f2f5; color: #1a3c5e; border: none; padding: 0.6rem 1.5rem; border-radius: 6px; cursor: pointer; }
        .btn-edit { background: none; border: 1px solid #3498db; color: #3498db; padding: 0.3rem 1rem; border-radius: 4px; cursor: pointer; }
        
        /* Modal Styles */
        .modal { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; }
        .modal-content { background: white; width: 400px; margin: 10% auto; padding: 2rem; border-radius: 12px; }
        .form-group { margin-bottom: 1.2rem; }
        .form-group label { display: block; margin-bottom: 0.5rem; font-size: 0.85rem; font-weight: 600; }
        .form-group input, .form-group select { width: 100%; padding: 0.6rem; border: 1px solid #ddd; border-radius: 4px; }
        .modal-actions { display: flex; justify-content: flex-end; gap: 1rem; margin-top: 2rem; }
    </style>

    <script>
        const modal = document.getElementById('bankModal');
        const form = document.getElementById('bankForm');

        function showAddModal() {
            document.getElementById('modalTitle').innerText = 'Add Bank Master';
            form.action = '/bank-balances/add';
            form.reset();
            modal.style.display = 'block';
        }

        function showEditModal(bank) {
            document.getElementById('modalTitle').innerText = 'Edit Bank Master';
            form.action = `/bank-balances/edit/${bank.id}`;
            form.elements['accountName'].value = bank.accountName;
            form.elements['accountNumber'].value = bank.accountNumber;
            form.elements['bankName'].value = bank.bankName;
            form.elements['accountType'].value = bank.accountType;
            modal.style.display = 'block';
        }

        function closeModal() {
            modal.style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == modal) closeModal();
        }
    </script>
</body>
</html>
