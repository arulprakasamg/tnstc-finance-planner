<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HSD Management - TNSTC Finance Planner</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .summary-cards { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem; margin-bottom: 2rem; }
        .summary-card { background: white; padding: 1.5rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); border-left: 5px solid #1a3c5e; }
        .summary-card h3 { font-size: 0.9rem; color: #64748b; margin-bottom: 1rem; text-transform: uppercase; letter-spacing: 0.5px; }
        .summary-card .main-value { font-size: 1.8rem; font-weight: 700; color: #1a3c5e; margin-bottom: 0.5rem; }
        .company-list { display: grid; grid-template-columns: 1fr 1fr; gap: 0.8rem; }
        .company-item { display: flex; justify-content: space-between; font-size: 0.85rem; color: #1e293b; border-bottom: 1px solid #f1f5f9; padding-bottom: 0.3rem; }
        .company-item span:last-child { font-weight: 600; color: #1a3c5e; }
        .hsd-container { background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); }
        .form-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; margin-bottom: 2rem; }
        .input-group { display: flex; flex-direction: column; gap: 0.5rem; }
        .input-group label { font-size: 0.85rem; font-weight: 600; color: #1a3c5e; }
        .input-group input { padding: 0.8rem; border: 1px solid #ddd; border-radius: 6px; }
        .btn-primary { background: #1a3c5e; color: white; border: none; padding: 0.8rem 2rem; border-radius: 6px; cursor: pointer; font-weight: 600; }
        .hsd-table { width: 100%; border-collapse: collapse; margin-top: 2rem; }
        .hsd-table th, .hsd-table td { text-align: left; padding: 1rem; border-bottom: 1px solid #eee; font-size: 0.9rem; }
        .hsd-table th { background: #f8f9fa; color: #1a3c5e; font-weight: 700; }
        .action-btn { padding: 0.4rem 0.8rem; border-radius: 4px; cursor: pointer; font-size: 0.8rem; border: none; margin-right: 0.5rem; }
        .btn-edit { background: #e3f2fd; color: #1976d2; }
        .btn-delete { background: #ffebee; color: #d32f2f; }
    </style>
</head>
<body>
    <nav class="sidebar">
        <div class="sidebar-header"><h2>TNSTC Finance</h2></div>
        <ul class="sidebar-menu">
            <li><a href="/">Dashboard</a></li>
            <li><a href="/bank-balances">Bank Balances</a></li>
            <li><a href="/daily-collections">Daily Collections</a></li>
            <li><a href="/payment-planning">Payment Planning</a></li>
            <li><a href="/hsd-management" class="active">HSD Management</a></li>
            <li><a href="#">Financial Reports</a></li>
        </ul>
    </nav>
    <div class="main-content">
        <header>
            <h1>HSD Purchase Entry</h1>
            <p class="date-range">Capture Daily HSD Purchases</p>
        </header>
        <main class="container">
            <!-- 1. Summary Cards -->
            <div class="summary-cards">
                <div class="summary-card">
                    <h3>Total HSD Outstanding</h3>
                    <div class="main-value">₹<%= summary.totalOutstanding.toFixed(2) %></div>
                    <p style="font-size: 0.8rem; color: #64748b;">Grand total across all companies</p>
                </div>
                <div class="summary-card">
                    <h3>Oil Company-wise Outstanding</h3>
                    <div class="company-list">
                        <div class="company-item"><span>IOC</span> <span>₹<%= summary.companyWise.IOC.toFixed(2) %></span></div>
                        <div class="company-item"><span>BPC</span> <span>₹<%= summary.companyWise.BPC.toFixed(2) %></span></div>
                        <div class="company-item"><span>HPC</span> <span>₹<%= summary.companyWise.HPC.toFixed(2) %></span></div>
                        <div class="company-item"><span>Retail / Confed</span> <span>₹<%= summary.companyWise.Retail.toFixed(2) %></span></div>
                        <div class="company-item"><span>Ramnad</span> <span>₹<%= summary.companyWise.Ramnad.toFixed(2) %></span></div>
                        <div class="company-item"><span>CNG</span> <span>₹<%= summary.companyWise.CNG.toFixed(2) %></span></div>
                    </div>
                </div>
            </div>

            <!-- 2. HSD Purchase Entry Section -->
            <div class="hsd-container">
                <form id="hsdForm">
                    <div class="input-group" style="margin-bottom: 2rem; max-width: 300px;">
                        <label>Position Date *</label>
                        <input type="date" id="hsdDate" name="date" value="<%= today %>" required>
                    </div>
                    
                    <div class="form-grid">
                        <div class="input-group"><label>IOC</label><input type="number" step="0.01" name="IOC" class="comp-input" value="0.00"></div>
                        <div class="input-group"><label>BPC</label><input type="number" step="0.01" name="BPC" class="comp-input" value="0.00"></div>
                        <div class="input-group"><label>HPC</label><input type="number" step="0.01" name="HPC" class="comp-input" value="0.00"></div>
                        <div class="input-group"><label>Retail / Confed</label><input type="number" step="0.01" name="Retail" class="comp-input" value="0.00"></div>
                        <div class="input-group"><label>Ramnad</label><input type="number" step="0.01" name="Ramnad" class="comp-input" value="0.00"></div>
                        <div class="input-group"><label>CNG</label><input type="number" step="0.01" name="CNG" class="comp-input" value="0.00"></div>
                    </div>
                    
                    <button type="submit" class="btn-primary">Save Purchase Entry</button>
                </form>

                <table class="hsd-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Retail</th>
                            <th>HPC</th>
                            <th>BPC</th>
                            <th>IOC</th>
                            <th>Ramnad</th>
                            <th>CNG</th>
                            <th>Total</th>
                            <th>Paid</th>
                            <th>Balance</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% records.forEach(r => { %>
                            <tr>
                                <td><%= r.formattedDate %></td>
                                <td><%= (r.Retail || 0).toFixed(2) %></td>
                                <td><%= (r.HPC || 0).toFixed(2) %></td>
                                <td><%= (r.BPC || 0).toFixed(2) %></td>
                                <td><%= (r.IOC || 0).toFixed(2) %></td>
                                <td><%= (r.Ramnad || 0).toFixed(2) %></td>
                                <td><%= (r.CNG || 0).toFixed(2) %></td>
                                <td style="font-weight: bold;">₹<%= (r.total || 0).toFixed(2) %></td>
                                <td>₹0.00</td>
                                <td>₹<%= (r.total || 0).toFixed(2) %></td>
                                <td>
                                    <button class="action-btn btn-edit" onclick="editEntry('<%= r.date %>', <%= JSON.stringify(r) %>)">Edit</button>
                                    <button class="action-btn btn-delete" onclick="deleteEntry('<%= r.date %>')">Delete</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                    <tfoot style="background: #f8f9fa; font-weight: bold; border-top: 2px solid #dee2e6;">
                        <tr>
                            <td>Total</td>
                            <td><%= summary.companyWise.Retail.toFixed(2) %></td>
                            <td><%= summary.companyWise.HPC.toFixed(2) %></td>
                            <td><%= summary.companyWise.BPC.toFixed(2) %></td>
                            <td><%= summary.companyWise.IOC.toFixed(2) %></td>
                            <td><%= summary.companyWise.Ramnad.toFixed(2) %></td>
                            <td><%= summary.companyWise.CNG.toFixed(2) %></td>
                            <td>₹<%= summary.totalOutstanding.toFixed(2) %></td>
                            <td>₹0.00</td>
                            <td>₹<%= summary.totalOutstanding.toFixed(2) %></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </main>
    </div>

    <script>
        document.querySelectorAll('.comp-input').forEach(input => {
            input.addEventListener('blur', function() {
                const val = parseFloat(this.value) || 0;
                this.value = val.toFixed(2);
            });
        });

        document.getElementById('hsdForm').onsubmit = async (e) => {
            e.preventDefault();
            
            // Format all inputs to 2 decimal places before processing
            document.querySelectorAll('.comp-input').forEach(input => {
                const val = parseFloat(input.value) || 0;
                input.value = val.toFixed(2);
            });

            const date = document.getElementById('hsdDate').value;
            
            // Validation logic: correctly detect entered HSD amounts
            const getVal = (name) => {
                const input = document.querySelector(`input[name="${name}"]`);
                return input ? (Number(input.value) || 0) : 0;
            };

            const iocVal = getVal("IOC");
            const bpcVal = getVal("BPC");
            const hpcVal = getVal("HPC");
            const retailVal = getVal("Retail");
            const ramnadVal = getVal("Ramnad");
            const cngVal = getVal("CNG");

            // Convert empty values to 0 and check if at least ONE of the fields has a value > 0
            const hasAmount = (iocVal > 0 || bpcVal > 0 || hpcVal > 0 || retailVal > 0 || ramnadVal > 0 || cngVal > 0);

            if (!hasAmount) {
                alert('Please enter at least one amount');
                return;
            }

            const companies = {
                IOC: iocVal,
                BPC: bpcVal,
                HPC: hpcVal,
                Retail: retailVal,
                Ramnad: ramnadVal,
                CNG: cngVal
            };

            try {
                const res = await fetch('/hsd-management/save', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ date, companies })
                });
                if (res.ok) {
                    window.location.reload();
                } else {
                    const errData = await res.json();
                    alert(errData.error || 'Please enter at least one amount');
                }
            } catch (err) { 
                alert('Error saving entry'); 
            }
        };

        function editEntry(date, data) {
            document.getElementById('hsdDate').value = date;
            document.querySelectorAll('.comp-input').forEach(input => {
                const val = parseFloat(data[input.name]) || 0;
                input.value = val.toFixed(2);
            });
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        async function deleteEntry(date) {
            if (!confirm('Delete this entry?')) return;
            try {
                const res = await fetch('/hsd-management/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ date })
                });
                if (res.ok) {
                    window.location.reload();
                } else {
                    alert('Error deleting entry');
                }
            } catch (err) { 
                alert('Error deleting entry'); 
            }
        }
    </script>
</body>
</html>
